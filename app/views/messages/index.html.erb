<% provide title: "Inbox" %>

<h1>Inbox</h1>

<table>
  <% @messages.each do |m| %>
    <tr>
      <td>
        <% unless m.opened? %>
          <%= link_to image_tag('https://upload.wikimedia.org/wikipedia/commons/thumb/0/0c/Red_pog.svg/2000px-Red_pog.svg.png', height: '10px', width: '10px'), opened_path(message_id: m.id), method: 'update'  %>
        <% end %>
      </td>
      <td>
        <%= link_to m.body, opened_path(message_id: m.id), method: 'update' %>
      </td>
    </tr>
  <% end %>
</table>
