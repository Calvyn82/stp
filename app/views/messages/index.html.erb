<% provide title: "Inbox" %>
<div class="container">


<h2>Inbox</h2>
<% if @messages %>
<div class="messages-wrapper">
      <% @messages.each do |message| %>
      <h3>Subect: <%= "#{message.topic}" %></h1>
          <% if message.receiver_type == "therapist" %>
            <div class="message from">
            <h4><%= @therapist.username %> Says:</h4></br>
            <p><%= message.body %></p>
            </div>
          <% else %>
          <div class="message to">
            <h4><%= @patient.username %> Says:</h4></br>
            <p><%= message.body %></p>
          </div>
          <% end %>
        
     <% end %>
  </div>
 <% end %>
</div>