<% provide title: "Inbox" %>

<h1>Inbox</h1>

<table>
  <% @messages.each do |m| %>
    <!-- This jquery isn't working...I'm trying to make the whole row clickable to go to the conversation.  Giving up for now -->
    <tr data-link="<%= patient_show_conversation_path(m[:therapist_id]) %>">
      <td>
        <% unless m[:opened] %>
          <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/0c/Red_pog.svg/2000px-Red_pog.svg.png" height="10px" width="10px">
        <% end %>
      </td>
      <td>
        <!-- AVATAR WILL GO HERE -->
        <img src="https://www.drupal.org/files/profile_default.jpg" height="30px" width="30px">
      </td>
      <td>
        <%= m[:name] %>
      </td>
      <td>
        <%= m[:body] %>
      </td>
    </tr>
  <% end %>
</table>
