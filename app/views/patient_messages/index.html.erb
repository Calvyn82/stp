<p id="notice"><%= notice %></p>

<h1>Listing Patient Messages</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patient_messages.each do |patient_message| %>
      <tr>
        <td><%= link_to 'Show', patient_message %></td>
        <td><%= link_to 'Edit', edit_patient_message_path(patient_message) %></td>
        <td><%= link_to 'Destroy', patient_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

