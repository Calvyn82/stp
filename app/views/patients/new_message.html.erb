<%= form_tag({controller: "patients", action: "send_new_message"}, method: "post", class: "custom_message") do %>

  <%= hidden_field_tag 'therapist', @therapist %>
  <%= hidden_field_tag 'patient', @patient %>
  <%= hidden_field_tag 'topic', @topic %>

  <%= text_field_tag 'body' %>

  <%= submit_tag 'Send' %>

<% end %>
