<% provide(:title, "Sign In") %>

<div class="sign-in">
<% provide(:title, "Sign In To Your Client Account") %>
<h1>Sign In To Your Client Account</h1>

<%= form_tag do %>

  <%= label_tag :username %>
  <%= text_field_tag :username %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag "Log In" %>
<% end %>
<%= link_to "I'm a client, but I forgot my password.", patient_reset_password_path %>
</div>

<div class="sign-in">
<% provide(:title, "Sign In To Your Therapist Account") %>
<h1>Sign In To Your Therapist Account</h1>

<%= form_tag({controller: "therapists_sessions", action: "create"}, method: "post") do %>

  <%= label_tag :username %>
  <%= text_field_tag :username %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag "Log In" %>
<% end %>
<%= link_to "I'm a therapist, but I forgot my password.", therapist_reset_password_path %>
</div>
