<p id="notice"><%= notice %></p>

<h1>Conversation With <%= @patient.username %></h1>

<%= form_tag therapist_reply_to_message_path, method: "post" do %>

  <%= hidden_field_tag :therapist_id, @therapist.id %>
  <%= hidden_field_tag :patient_id, @patient.id %>
  <%= hidden_field_tag :message_id, @message.id %>
  
  <%= text_field_tag :body %>

  <%= submit_tag "Send" %>

<% end %>

<table>
  <tbody>
    <% @therapist_messages.each do |therapist_message| %>
      <tr>
        <td>
        <% if therapist_message.sent_messageable_type == "Therapist" %>
          <%= @therapist.username %>:
        <% else %>
          <%= @patient.username %>:
        <% end %>
      </td>
      <td>
        <%= therapist_message.body %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
