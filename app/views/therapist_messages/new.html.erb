<h1>Send Message to <%= @patient.username %></h1>

<%= form_for @message, url: therapist_send_new_message_path do |f| %>

  <%= f.hidden_field :therapist_id, { :value => @therapist_id } %>
  <%= f.hidden_field :patient_id, { :value => @patient_id } %>
  <%= f.hidden_field :topic, { :value => @topic } %>

  <%= f.text_field :body %>

  <%= f.submit "Send" %>

<% end %>
