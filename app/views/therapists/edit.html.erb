<% provide(:title, "Edit Therapist Profile") %>
<div class="edit-profile">
<h1>Edit Therapist Profile</h1>

<% if @therapist.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@therapist.errors.count, "error") %> prohibited you from being saved:</h2>

    <ul>
      <% @therapist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@therapist, url: update_therapist_path) do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :country %>
  <%= f.text_field :country %>

  <%= f.label :practice %>
  <%= f.text_field :practice %>

  <%= f.label :years_experience %>
  <%= f.text_field :years_experience %>

  <%= f.label :qualifications %>
  <%= f.text_area :qualifications %>

  <%= f.label :gender %>
  <%= f.select :gender, ["Male", "Female"] %>

  <%= f.label :religion %>
  <%= f.text_field :religion %>

  <%= f.label :licenses %>
  <%= f.text_area :licenses %>

  <%= f.label :main_license %>
  <%= f.text_field :main_license %>

  <%= f.label "Would you like to participate in distance counseling?" %>
  <%= f.select :distance_counseling, options_for_select([["Yes", true], ["No", false]]) %>

  <%= f.label :purpose %>
  <%= f.text_field :purpose %>

  <!--Optional Fields -->

  <%= f.label :website %>
  <%= f.text_field :website %>

  <%= f.label :former_religion %>
  <%= f.text_field :former_religion %>

  <%= f.label :languages %>
  <%= f.text_area :languages %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :approach %>
  <%= f.text_area :approach %>

  <%= f.submit %>
<% end %>
</div>
