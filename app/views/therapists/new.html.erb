<% provide(:title, "Therapist Registration") %>
<div class="registration-form"> 
<h1>Therapist Registration</h1>

<% if @therapist.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@therapist.errors.count, "error") %> prohibited you from being saved:</h2>

    <ul>
      <% @therapist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@therapist, url: therapist_signup_path) do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :country %>
  <%= f.text_field :country %>

  <%= f.label :practice %>
  <%= f.text_field :practice %>

  <%= f.label :years_experience %>
  <%= f.text_field :years_experience %>

  <%= f.label :qualifications %>
  <%= f.text_area :qualifications %>

  <%= f.label :gender %>
  <%= f.select :gender, ["Male", "Female"] %>

  <%= f.label :religion %>
  <%= f.text_field :religion %>

  <%= f.label :licenses %>
  <%= f.text_area :licenses %>

  <%= f.label :main_license %>
  <%= f.text_field :main_license %>

  <%= f.label "Would you like to participate in distance counseling?" %>
  <%= f.select :distance_counseling, options_for_select([["Yes", true], ["No", false]]) %>

  <%= f.label :purpose %>
  <%= f.text_field :purpose %>

  <!--Specialty Check Boxes -->

  Please check your specialty areas:
  <br>
  <%= f.check_box :adolescents %><%= f.label "Adolescents" %>
  <br>
  <%= f.check_box :adults %><%= f.label "Adults" %>
  <br>
  <%= f.check_box :children %><%= f.label "Children" %>
  <br>
  <%= f.check_box :coping_with_change %><%= f.label "Coping with Change" %>
  <br>
  <%= f.check_box :depression %><%= f.label "Depression" %>
  <br>
  <%= f.check_box :existential %><%= f.label "Existential Issues: identity, meaning, death anxiety, etc." %> 
  <br>
  <%= f.check_box :general_anxiety %><%= f.label "General Anxiety" %>
  <br>
  <%= f.check_box :grief_loss %><%= f.label "Grief and Loss Counseling" %>
  <br>
  <%= f.check_box :marriage_family %><%= f.label "Marriage and Family" %>
  <br>
  <%= f.check_box :mood_disorders %><%= f.label "Mood Disorders" %>
  <br>
  <%= f.check_box :ocd %><%= f.label "Obsessive-Compulsive Disorder" %>
  <br>
  <%= f.check_box :ptsd %><%= f.label "Post-Traumatic Stress Disorder" %>
  <br>
  <%= f.check_box :relationship_counseling %><%= f.label "Relationship Counseling" %>
  <br>
  <%= f.check_box :self_improvement %><%= f.label "Self-Improvement" %>
  <br>
  <%= f.check_box :sex_therapy %><%= f.label "Sex Therapy" %>
  <br>
  <%= f.check_box :social_anxiety %><%= f.label "Social Anxiety" %>
  <br>
  <%= f.check_box :stress_management %><%= f.label "Stress Management" %>
  <br>
  <%= f.check_box :substance_abuse %><%= f.label "Substance Abuse/Dependence" %>
  <br>
  <%= f.check_box :trauma_recovery %><%= f.label "Trauma Recovery" %>
  <br>
     
  <!--Optional Fields -->

  <%= f.label :website %>
  <%= f.text_field :website %>

  <%= f.label :former_religion %>
  <%= f.text_field :former_religion %>

  <%= f.label :languages %>
  <%= f.text_area :languages %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :approach %>
  <%= f.text_area :approach %>

  <%= f.submit "Create my account" %>
<% end %>
</div>
